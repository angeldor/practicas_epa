programa cap3ejer2inc1
areas
  ciudad: AreaC(1,1,100,100)
robots
  robot robot1
  variables
    flores: numero
    total: numero
  comenzar
    flores := 0
    total := 0
    Pos(1,44)
    derecha
    repetir 99
      mientras (HayFlorEnLaEsquina)
        tomarFlor
        flores := flores + 1
        total := total + 1
      repetir flores
        depositarFlor
      flores := 0
      mover
    mientras (HayFlorEnLaEsquina)
      tomarFlor
      flores := flores + 1
      total := total + 1
    repetir flores
      depositarFlor
    Informar(total)
  fin
variables
  rinfo: robot1
comenzar
  AsignarArea(rinfo,ciudad)
  Iniciar(rinfo,1,1)
fin